<body>

    <h2 class="text-center">Buscar usuario</h2>

    <form asp-action="BuscarUsuario" method="post" class="my-3">

        <div class="row g-3 align-items-center">
            <div class="col-auto pr-1">
                <input asp-for="Documento" type="text" value="" class="form-control">
            </div>
            <div class="col-auto p-1">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
            <div class="col-auto p-1">
                <a asp-controller="Admin" asp-action="BuscarUsuario" class="btn btn-danger">Cancelar</a>
            </div>
        </div>

    </form>
    @if(Model.IdUsuario != 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Tipo de documento</th>
                    <th>Numero documento</th>
                    <th>Programa</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(modelItem => modelItem.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.IdTipoDocumento)</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.Documento)</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.ProgramaUsuarios)</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.IdRol)</td>
                    <td>
                        @Html.ActionLink("Editar", "EditarUsuario", new {Idusuario = Model.IdUsuario}, new {@class="btn btn-warning"})
                        @Html.ActionLink("Eliminar", "Eliminar", new {Idusuario = Model.IdUsuario}, new {onclick = "return confirm('Â¿Esta seguro?')", @class="btn btn-danger"})
                    </td>
                </tr>
            </tbody>
