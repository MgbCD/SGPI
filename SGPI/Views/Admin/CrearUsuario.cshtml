        <br>

        <label class="label" for="eml"><b>Correo</b></label>
        <br>
        <input type="email" class="input" placeholder="Ingrese correo electronico" name="email" required style="margin-bottom: 50px;">

    </div>

    <div style="margin: 10px;">
        <label class="label" for="num"><b>Documento</b></label>
        <br>
        <input class="input" type="text" placeholder="Ingrese documento"  name="num" required style="margin-bottom: 50px;">

        <br>

        <label class="label" for="apellido"><b>Apellido</b></label>
        <br>
        <input type="text" class="input" placeholder="Ingrese apellido" name="apellido" required style="margin-bottom: 50px;">

        <br>

        <label class="label" for="direccion"><b>Direccion</b></label>
        <br>
        <input type="text" class="input" placeholder="Ingrese direccion" name="direccion" required style="margin-bottom: 50px;">

        <br>
    </div>

    <div style="margin: 10px;">
        <label class="label" for="programa"><b>Programa</b></label>
        <br>
        <select id="programa" name="programa" style="width: 200px; margin-bottom: 50px;">
            <option>Elija un programa </option>
            <option value="esi">Especializacion en seguridad de la informacion</option>
            <option value="mgti">Maestria en gestion de tecnologia de la informacion </option>
            <option value="mgrma">Maestria en gestion de riesgo y medio ambiente </option>
        </select>

        <br>

        <label class="label" for="genero"><b>Genero</b></label>
        <br>
        <select id="genero" name="genero" style="margin-bottom: 50px;">
            <option>Seleccione genero </option>
            <option value="f">Femenino</option>
            <option value="m">Masculino </option>
            <option value="otro">Otro </option>
        </select>

        <br>

        <label class="label" for="telefono"><b>Telefono</b></label>
        <br>
        <input type="number" class="input" placeholder="Ingrese telefono" name="telefono" required>

