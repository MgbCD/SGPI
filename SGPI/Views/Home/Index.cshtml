@{
    ViewData["Title"] = "Login";
}

<style>
body {font-family: Arial, Helvetica, sans-serif;}


input[type=text], input[type=password] {
  width: 100%;
  padding: 12px 20px;
  margin: 0 auto;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

button {
  background-color: #218A07;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: auto;
}

button:hover {
  opacity: 0.8;
}

.login {
    display: flex;
    width:max-content;
    margin:100px auto;

}

.imgcontainer {
  text-align: center;
  margin: 24px 0 12px 0;
}

.buttons {
    width: max-content;
    
}

.container {
  padding: 16px;
} 

.logo{
    width:400px;

}
.item{
    margin-bottom: 20px;
}

</style>

<div>
    <center>
        <h1>Sistema de gestion de posgrados</h1>
    </center>
    <div class="login">
        <img class="logo" src="~/img/logo.png">
        <form action="/action_page.php" method="post">
            <div>
               
                <div class="item">
                    <label for="uname"><b>Usuario</b></label>
                    <input type="text" placeholder="Ingrese usuario" name="uname" required>
                </div>
                <div class="item">
                    <label for="psw"><b>Contraseña</b></label>
                    <input type="password" placeholder="Ingrese contraseña" name="psw" required>
                </div>
             
            </div>

            <div class="buttons">
                <button type="submit">Ingresar</button>
                <a asp-area="" asp-controller="Home" asp-action="OlvidoContraseña">¿Olvido Contraseña?</a>
            </div>
        </form>
    </div>    
</div>

